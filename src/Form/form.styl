@import "../css/clearing.css"
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap');

paddingTopBot = calc(50% - 20px/2);


#root
  width 100%
  height 100%
  display: flex
  justify-content: center
  align-items: center

  .form_group
    height: 192px;
    width: 240px;
    display: flex
    flex-direction: column
    justify-content: space-between
    position relative

    
    input 
      height 48px
      width 240px
      padding-left 16px
      box-shadow: 0px 7px 64px rgba(0, 0, 0, 0.07);
      border-radius: 6px;


