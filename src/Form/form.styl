    input[type='submit']
      background: #6979F8;
      font-family: Inter;
      font-style: normal;
      font-weight: bold;
      font-size: 17px;
      line-height: 22px;
      color white
      padding-left: 0
      box-shadow: none

    .active
      font-family: Inter;
      font-style: normal;
      font-weight: normal;
      font-size: 15px;
      line-height: 20px;
      
      &:placeholder
        color: #D0C9D6;
    
