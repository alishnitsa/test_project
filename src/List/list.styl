@import "../css/clearing.css"
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap');


testBorder = 1px solid #000
widthContainer = calc(1440px - 48px*2);

html 
    background: #F7F7F7
    font-family: Inter;
    font-style: normal;
    font-weight: 500;
    font-size: 13px;
    line-height: 18px;

.navigation
    position fixed

.list_desktop
    width: 100%
    min-height: 100%
    position: relative

    nav
        position: absolute
        left: 0px;
        top: 0px;
        display: flex
        width 100%
        height 47px

        padding: 0 48px

        background: #FFFFFF;

        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);

        .link  
            min-width 47px



            display: flex;
            justify-content: center
            align-items: center;
            text-align: center;

            color: #D0C9D6;

            margin-right: 36px;

            border: none

            
            &.active
                color: #000000
                border-right: 3px solid #ffffff 
                border-left: 3px solid #ffffff 
                border-bottom: 3px solid #6979f8;



    .container
        position: absolute
        left: 48px;
        top: 95px;
        display: flex
        flex-direction: column
        margin: 48px 48px 0 48px;
        width: widthContainer
        min-height 100%



        .person
            height 80px
            width: auto
            display: flex
            flex-direction: row
            justify-content: space-between
            margin-bottom: 18px;
            background: #ffffff
            border-radius: 4px;
            align-items: center
            padding: 16px

            z-index 1

            cursor pointer
            

            .person_item
                display: flex
                flex-direction: row
                align-items: center

            div
                display: flex;
                align-items: center;

                color: #000000;

            .avatar
                width 48px
                height 48px
                background: #123456
                border-radius: 64px;
                margin-right: 16px

            .person_name
                margin-right: 44px;

            .balance
                z-index: 3

            .date
                z-index: 3
                color: #A8A8A8;

            .status
                width: 193px;
                margin-left 38px;
                margin-right 29px;
                padding: 16px

    .gradient
        position: fixed
        bottom: 0px
        left 0px
        height 44px
        width 100%;
        background linear-gradient(180deg, rgba(247, 247, 247, 0) 0%, #F7F7F7 100%);

select,
option
    font-family: Inter;
    font-style: normal;
    font-weight: 500;
    font-size: 13px;
    line-height: 18px;
select
    z-index 2
    border: none;
    outline: none;
    padding: 5px;


